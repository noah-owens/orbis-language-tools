{
  "name": "orbis-language-tools",
  "displayName": "Orbis Language Tools",
  "description": "Syntax highlighting and code completion for Orbis Definition Language",
  "version": "0.4.0",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "orbis",
      "aliases": ["Orbis Definition Language", "orbis"],
      "extensions": [".orb", ".mud"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "orbis",
      "scopeName": "source.orbis",
      "path": "./syntaxes/orbis.tmLanguage.json"
    }]
  }
}
